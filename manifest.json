{
  "manifest_version": 3,
  "name": "Meet Studio",
  "version": "1.0",
  "description": "Record audio and video from multiple sources",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "desktopCapture",
    "downloads",
    "tabCapture",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}